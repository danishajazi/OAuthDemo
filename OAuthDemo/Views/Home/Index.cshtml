@{
    ViewBag.Title = "Home Page";
}
<style>
    img {
        border-radius: 50%;
        border: dotted;
        color: gray;
        margin: 10px;
    }

    .jumbotronCustom {
        margin-bottom: 30px;
        background-color: #eeeeee;
        height: 175px;
    }
</style>

<div class="jumbotronCustom">
    <div style="float:left; margin-top:40px;">
        <h1>Google OAuth Demo</h1>
    </div>


    @if (ViewBag.UserDetail == null)
    {
        @*<p class="btn btn-default">
                @Html.ActionLink("Login With Google", "LoginUsingGoogle", "Home")
            </p>*@
    }
    else
    {
        <div style="float:right">
            <p>
                <img src="@ViewBag.UserDetail.Picture" style="margin-right:30px;" />
            </p>
            <p class="btn btn-default">
                @Html.ActionLink(" Logout ", "SignOut", "Home")
            </p>
        </div>

    }
</div>

<div class="row">
    <div class="col-md-6">
        @if (ViewBag.UserDetail == null)
        {
            <p class="btn btn-default">
                @Html.ActionLink("Login With Google", "LoginUsingGoogle", "Home")
            </p>
        }
    </div>

    
</div>
<div class="row">
    @if (ViewBag.UserDetail == null)
    {

    }
    else
    {
        <div class="col-md-6">
            <h3>Name: @ViewBag.UserDetail.Name</h3>
            <h4>Given Name: @ViewBag.UserDetail.GivenName</h4>
            <h4>Family Name: @ViewBag.UserDetail.FamilyName</h4>
        </div>

        <div class="col-md-6">
            <h3>Email: @ViewBag.UserDetail.Email</h3>
        </div>
    }
</div>
